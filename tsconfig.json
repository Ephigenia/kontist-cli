{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "node",
      "mocha"
    ],
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["source/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
